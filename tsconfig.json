{
  "include": ["src/**/*", "test/**/*"],
  "compilerOptions": {
    "lib": ["ES2023"],
    "target": "ES2022",
    "baseUrl": "./src",
    "allowJs": true,
    "allowUnreachableCode": false,
    "checkJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist/",
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true
  }
}
